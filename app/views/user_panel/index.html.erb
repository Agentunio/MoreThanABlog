<table class="table">
  <thead>
    <tr>
      <th scope="col">Nick użytkownika</th>
      <th scope="col">Mail użytkownika</th>
      <th scope="col">Aktualna rola</th>
      <th scope="col">Przydziel inną role</th>
    </tr>
  </thead>
  <tbody>
 <% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td><%= user.role.name %></td>
    <td>
        <%= form_with model: user, url: admin_users_save_path(user.id), method: :patch do |form| %>
        <%= form.select :role_name, @roles.map { |role| [role.name, role.name] }, {prompt: "Przydziel role"}, class: "form-select" %>
        <%= form.submit "Zapisz rolę", class: "btn mt-2" %>
        <% end %>
    </td>
  </tr>
<% end %>
  </tbody>
</table>
<div>
  <%= link_to "Wróć", admin_path %>
</div>