<nav class="navbar bg-dark navbar-expand-lg" data-bs-theme="dark">
  <div class="container-fluid">
    <%= link_to image_tag("mainpage/logo.png", style: "height: 70px;"), root_path %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse  navbar-collapse" id="navbarNav">
      <ul class="ms-auto navbar-nav">
        <li class="nav-item me-3">
          <%= link_to "Strona główna", root_path, class: "nav-link active" %>
        </li>
       <% @nav_pages.each do |page| %>
          <% dropdown = page.nav_children.any? %>

          <% if dropdown %>
            <li class="nav-item d-flex dropdown">
              <%= link_to page.title,
                          site_page_path(page.full_slug),
                          class: "nav-link active",
                          id: "nav#{page.id}" %>

              <button class="nav-link dropdown-toggle border-0 bg-transparent"
                      type="button"
                      id="toggle#{page.id}"
                      data-bs-toggle="dropdown"
                      aria-expanded="false"
                      aria-label="Rozwiń submenu dla #{page.title}">
              </button>

              <ul class="dropdown-menu" aria-labelledby="toggle#{page.id}">
                <% page.nav_children.each do |child| %>
                  <li>
                    <%= link_to child.title,
                                site_page_path(child.full_slug),
                                class: "dropdown-item" %>
                  </li>
                <% end %>
              </ul>
            </li>


          <% else %>
            <li class="nav-item">
              <%= link_to page.title,
                          site_page_path(page.full_slug),
                          class: "nav-link active" %>
            </li>
          <% end %>
        <% end %>


       <% if user_signed_in? %>
          <% if current_user.role&.panelpriv %>
            <li class="nav-item me-3">
              <%= link_to "Panel admina", admin_path, class: "nav-link active" %>
            </li>
          <% end %>
          <li class="nav-item me-3">
            <%= link_to "Edytuj swoje konto",  edit_user_registration_path, class: "nav-link active" %>
          </li>
          <li class="nav-item me-3">
            <%= button_to "Wyloguj się", destroy_user_session_path, method: :delete, class: "nav-link active", style: "color: #FA003F" %>
          </li>
        <% else %>
          <li class="nav-item me-3">
            <%= link_to "Zaloguj się", new_user_session_path, class: "nav-link active" %>
          </li>
          <li class="nav-item me-3">
            <%= link_to "Zarejestruj się", new_user_registration_path, class: "nav-link active" %>
          </li>
        <% end %>
      
      <li class="nav-item me-3">
        <%= link_to "Kontakt", kontakt_path, class: "nav-link active" %>
      </li>
      <% if user_signed_in? %>

      <% end %>
      </ul>
    </div>
  </div>
</nav>