<div id="<%= dom_id post %>">
  <div class="card" style="width: 18rem;">
    <%= image_tag(post.main_image, class: "card-img-top", alt: post.title) if post.main_image.present? %>
    <div class="card-body">
      <h2 class="card-title"><%= post.title %></h2>
      <p class="card-text"><%= post.content.to_plain_text %></p>
      <%= link_to "Czytaj wiÄ™cej ->", post, class: "btn" %>
    </div>
  </div>
</div>