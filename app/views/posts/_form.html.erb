<div class="bd-example m-0">
<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, "Tytuł", class: "form-label d-block" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div>
    <%# <%= form.label :body, "Treść", class: "form-label d-block mt-2" %>
    <%# <%= form.text_field :body, class: "form-control" %>

    <%= form.label :content, "Treść" %>
    <%= form.rich_textarea :content %>
  </div>

  <div>
    <%= render "image_preview", form: form, post: post, class: "image" %>
  </div>

  <div>
    <%= form.submit "Dodaj nowy wpis", class: "btn mt-2" %>
  </div>
<% end %>
</div>