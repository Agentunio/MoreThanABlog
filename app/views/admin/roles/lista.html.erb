<table class="table">
  <thead>
    <tr>
      <th scope="col">Tytuł</th>
      <th scope="col">Edytuj</th>
      <th scope="col">Usuń</th>
    </tr>
  </thead>
  <tbody>
  <% @roles.each do |role| %>
    <tr>
      <td><%= role.name %></td>
      <td><%= link_to "Edytuj", edit_admin_role_path(role.id), class: "btn" %></td>
      <td><%= button_to "Usuń", admin_role_path(role), method: :delete, class: "btn" %></td> 
    </tr>
  <% end %>
  </tbody>
</table>
<div>
  <%= link_to "Wróć", admin_path %>
</div>