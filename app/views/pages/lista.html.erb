<table class="table">
  <thead>
    <tr>
      <th scope="col">Tytuł</th>
      <th scope="col">Edytuj</th>
      <th scope="col">Usuń</th>
    </tr>
  </thead>
  <tbody>
  <% @pages.each do |page| %>
    <tr>
      <td><%= page.title %></td>
      <td><%= link_to "Edytuj", edit_admin_page_path(page.id), class: "btn" %></td>
      <td><%= button_to "Usuń", admin_page_path(page), method: :delete, class: "btn" %></td> 
    </tr>
  <% end %>
  </tbody>
</table>
<div>
  <%= link_to "Wróc", admin_path %>
</div>